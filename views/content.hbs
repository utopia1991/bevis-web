{{#extend "stylesheets"}}
    <link rel="stylesheet/less" type="text/css" href="/less/loading/win8loading.less"/>
    <link rel="stylesheet/less" type="text/css" href="/less/content/content.less"/>
{{/extend}}

<!-- loading background -->
<section id="background">
    <div class="windows8">
        <div class="wBall" id="wBall_1">
            <div class="wInnerBall"></div>
        </div>
        <div class="wBall" id="wBall_2">
            <div class="wInnerBall"></div>
        </div>
        <div class="wBall" id="wBall_3">
            <div class="wInnerBall"></div>
        </div>
        <div class="wBall" id="wBall_4">
            <div class="wInnerBall"></div>
        </div>
        <div class="wBall" id="wBall_5">
            <div class="wInnerBall"></div>
        </div>
    </div>
</section>

<article>
    <div id="timeNow">
        <script>
            $('#timeNow').leoweather({format: '<div>{年}年 {月}月 {日}日 星期{周} {时段} {昼夜}</div>'});
        </script>
    </div>
    <div class="wordPlace">
        <h1 class="wordTitle">{{blog.title}}</h1>
        <p class="articleTitle">Article: {{blog.published}}<p/>
        <div class="aboutP">
            {{> videoBack}}
        </div>
        <div>
            <a href="/article" class="jumpGoogle">返回文章列表</a>
            <div class="payMe">
                <a href="javascript:void(0)" onclick="dashangToggle()" class="dashang" title="打赏，支持一下">打赏</a>
                <div class="hide_box"></div>
                <div class="shang_box">
                    <a class="shang_close" href="javascript:void(0)" onclick="dashangToggle()" title="关闭"><img
                            src="/images/payme/close.jpg" alt="取消"/></a>
                    <div class="shang_tit">
                        <p>感谢您的支持，我会继续努力的!</p>
                    </div>
                    <div class="shang_payimg">
                        <img src="/images/payme/alipayimg.jpg" alt="扫码支持" title="扫一扫"/>
                    </div>
                    <div class="pay_explain">扫码打赏，你说多少就多少</div>
                    <div class="shang_payselect">
                        <div class="pay_item checked" data-id="alipay">
                            <span class="radiobox"></span>
                            <span class="pay_logo"><img src="/images/payme/alipay.jpg" alt="支付宝"/></span>
                        </div>
                        <div class="pay_item" data-id="weipay">
                            <span class="radiobox"></span>
                            <span class="pay_logo"><img src="/images/payme/wechat.jpg" alt="微信"/></span>
                        </div>
                    </div>
                    <div class="shang_info">
                        <p>打开<span id="shang_pay_txt">支付宝</span>扫一扫，即可进行扫码打赏哦</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>

{{#extend "scripts"}}
    <script type="text/javascript" src="/js/article/content.js"></script>
{{/extend}}