{{#extend "stylesheets"}}
    <style>
        .blowBlock{
            width: 600px;
            min-height: 423px;
            margin: 40px auto;
        }
        .pos-center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
        .demo-img {
            width: 550px;
            height: 400px;
            border-radius: 5px;
        }
    </style>
{{/extend}}

<div class="blowBlock">
    <img src="/images/blowup/waldo.jpg" class="demo-img pos-center">
</div>

{{#extend "scripts"}}
    <script type="text/javascript" src="/js/blowup/blowup.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".demo-img").blowup({
                background : "#fff"
            });
        })
    </script>
{{/extend}}
